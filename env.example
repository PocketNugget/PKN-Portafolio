# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Frontend origin for CORS (use your actual domain for production)
FRONTEND_ORIGIN=https://pocketnugget.xyz

# JWT Secret (generate a strong random string)
JWT_SECRET=your_secure_jwt_secret_here

# Default admin password (change this immediately after setup)
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password_here

# Database path (optional, defaults to data.db)
# DATABASE_PATH=/path/to/your/database.db 
